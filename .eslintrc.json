{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "standard",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "react-hooks"
    ],
    "rules": {
      "react/prop-types": "off", // Optional: Disable prop-types if not using them
      "react/react-in-jsx-scope": "off",
      "space-before-function-paren": "off"
    }
  }